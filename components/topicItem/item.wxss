@import "../../wxParse/wxParse.wxss";
.content{
  background-color: #FFFFFF;
  border-bottom:1rpx solid #EBEBEB;
  /* border-top:1rpx solid #EBEBEB; */
  height: auto;
  position: relative

}
.show_sign{
  position: absolute;
  top:40rpx;
  right:30rpx;
  display: block;
  z-index: 9999;
  text-align: right;
  background: none;
  font-size:26rpx;
  color:#666;

}

.sign_day{
  color:#FB7661;
  padding:0 6rpx;
  font-weight: bold;
}
.username{
  font-size: 30rpx;
  color: #344750;
  float: left;
  width:80%;
  margin-left:20rpx;
  margin-top:28rpx;
}
.time{
  font-size: 24rpx;
  color: #B3B3B3;
  float: left;
  width:80%;
  margin-left:20rpx;
}
.contentTopic{
  font-size: 34rpx;
  color: #FD782D;
  float: left;
  width:100%;
  margin-left: 28rpx;
}
.detail{
  font-size: 30rpx;
  color: #344750;
  margin:16rpx 30rpx 28rpx 30rpx;
  position: relative;
  overflow: hidden;
}
.show-more{
  font-size:30rpx;
  color:#8EA6B0;
}
.functionImg {
width:35rpx;
height:35rpx;
top:0;
left:0;
position: absolute;
}

.delimiter{
  margin-top:12rpx;
  width: 2rpx;
  height: 30rpx;
  background-color: #EBEBEB;
  float: left;
}
.userAvatar{
  height: 60rpx;
  width: 60rpx;
  margin-left: 30rpx;
  float: left;
  margin-top:34rpx;
  border-radius: 50rpx;
}
.number{
  font-size: 24rpx;
  display: inline;
}
.bottombar{
  overflow: hidden;
  display: flex;
  margin-top:32rpx;
  box-sizing: border-box;
}
.function {
  flex:1;
  margin-bottom:17rpx;
  text-align:center;
}

.function:first-child{
  border-left: none;
}
.contentImg-inner01 .cImg{
  height: 380rpx;
  width: 100%;
}
.cImg{
  height: 224rpx;
  width: 100%;
}
.contentImg{
  display: flex;
  justify-content: space-around;
  padding:0 20rpx;
}
/* 热门话题 */
.topic-item{
  width:290rpx;
  height:160rpx;
  border-radius: 4rpx;
  margin-left:30rpx;
  display: inline-block;
  position: relative;
  overflow: hidden;
  /* display: flex; */
  align-items:center;
  justify-content: center;
  /* float:left; */
}

.topic-bg{
  /* position: absolute;
  top:0;
  left:0;
  z-index:2200; */

}
.topic-text-wrap{
  position: absolute;
  z-index:2222;
  width:160rpx;
  height:130rpx;
  text-align: center;
  display:block;
  top:20rpx;
  left:60rpx;
  overflow: hidden;
}
.topic-name{
  color:#fff;
  font-size:28rpx;
  position: relative;
  z-index:2222;
  text-align: center;
  line-height:36rpx;
  white-space: pre-wrap;
}

.topic-item-ml{
  margin-left:30rpx;
}
.scroll-view{
  width:auto;
}
.scroll-view_item{
  height:160rpx;
  width:100%;
  white-space: nowrap;
  display: flex
}
.topic-title{
  font-size:36rpx;
  color:#344750;
  text-align: left;
  display: inline-block;
}
.more{
  color:#8EA6B0;
  font-size:30rpx;
  text-align: right;
  padding-right:30rpx;

}
.hot-icon{
  width:50rpx;
  height:36rpx;
  padding:0 13rpx 0 30rpx;
}
.topic-top{
  padding:0;
  text-align: left;
}
.topic-wrap{
  margin:52rpx 0 42rpx 0;
}
/* // 推荐热帖 */
.content-wrap{
  /* padding-bottom:20rpx; */
  /* border-bottom:20rpx solid #f5f5f5; */
  /* border:1rpx solid red; */
  margin-bottom:120rpx;
  /* background:#f5f5f5; */
}
.post-wrap{
  margin:66rpx 0 0rpx 0;
  background: #fff;
}
.section_gap{
  background:#fff;
}

.contentImg-inner{flex:1;padding:0 10rpx;font-size: 0;}
/*清除浮动代码*/
.clearfloat:after{display:block;clear:both;content:"";visibility:hidden;height:0}
.clearfloat{zoom:1}


.scroll-view_H{
  width: 100%;
  white-space: nowrap;
}
.scroll-view-item_H{
  width: 200px;
  height: 100px;
  display: inline-block;
  background: red;
  margin-left:10rpx;
}
.function-text{padding-left:40rpx;display: inline;position: relative;}
page{
  min-height: 100%;
  position: relative;
}
.img-responsive{
  min-width: 100%;
  height: auto;
}
.main-content{
  width: 100%;
  height: 100%;
  position: absolute;
  padding: 0;
  border-radius: 0;
}
.main-content::after{
  border: none;
}
.main-content:focus{
  opacity: 1;
}
.bg{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.text-show{
  position: relative;
  padding-top: 196rpx;
  width: 100%;
  min-height: 740rpx;
  text-align: center;
  overflow: hidden;
}
.text-show image{
  display: inline-block;
  max-width: 506rpx;
  height: auto;
}
.handle-btn{
  position: relative;
  margin-top: 36rpx;
  width: 504rpx;
  z-index: 100;
}
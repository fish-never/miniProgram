page{
  min-height: 100%;
  position: relative;
}
.img-responsive{
  min-width: 100%;
  height: auto;
}
.main-content{
  width: 100%;
  min-height:100%;
  position: absolute;
  padding: 0;
  border-radius: 0;
  display: block;
  overflow:auto;
  z-index: 1;
}
.main-content::after{
  border: none;
}
.bg{
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}
.text-show{
  position: absolute;
  width: 100%;
  height: 100%;
  text-align: center;
  z-index: 999;
}
.z-index-under{
  z-index: 10;
}
.modal-bg{
  width: 100%;
  height: 100%;
  text-align: center;
  background: rgba(0, 0, 0, 0.35);
}
.copy-btn-box{
  height: 70rpx;
  text-align: center;
  margin: 20rpx 0;
}
.copy-btn{
  position: relative;
  width: 180rpx;
  z-index: 100;
}
.text-title-bg{

}
.text-title-bg{
  margin: 68rpx auto 0;
  width: 100%;
  height: auto;
  display: block;
  position: absolute;
}
.text-title{
  width: 566rpx;
  display: inline-block;
}
.user-avatar{
  padding: 10rpx 0;
  position: relative;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  margin: 0 auto;
  overflow: hidden;
  border: 4rpx solid #FFDB68;
}

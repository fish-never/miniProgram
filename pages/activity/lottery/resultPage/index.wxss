.name{
  font-size: 26rpx;
  color: #FFDB68;
  line-height: 50rpx;
}
.text-lucking{
  position: relative;
  width: 560rpx;
  height: 252rpx;
  margin: 0 auto;
}
.qr-code{
  position: absolute;
  top: 24rpx;
  left: 44rpx;
  width: 140rpx;
  height: 140rpx;
}
.content-text{
  position: absolute;
  top: 0;
  left:196rpx;
  width: 312rpx;
  height: 186rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  line-height: 48rpx;
  text-align: left;
}
.share-save{
  position: relative;
  width: 613rpx;
  margin: 60rpx auto 0;
  z-index: 99;
  overflow:hidden;
}
.share{
  width: 304rpx;
  height: 96rpx;
  float: left;
  margin:0;
  padding: 0;
  border: none;
  box-shadow: none;
  background:transparent;
  display:inline-block;
}
.share::after{
  border: none;
}
.save{
  width: 304rpx;
  height: 96rpx;
  float: right;
}
@keyframes cardMove {
  from {
    top: 0;
    left: 0;
    transform: scale(1);
  }
  to {
    top: 862rpx;
    left: 350rpx;
    transform: scale(0.12);
  }
}
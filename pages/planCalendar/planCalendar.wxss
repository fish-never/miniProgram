page{background: #fff;}
.f5_bg{background: #f5f5f5;}
.calendar_top{padding:30rpx 50rpx 50rpx;color:#fff;border-bottom-left-radius:40rpx;border-bottom-right-radius:40rpx; }
.calendar_day{font-size: 96rpx;line-height: 134rpx;padding:0 10rpx;}
.margin-b22{margin-bottom: 22rpx;}
.lineheight28{line-height: 28rpx;}
.lineheight34{line-height: 34rpx;}
.padding-b30{padding-bottom: 30rpx;}
.week_tit{display:flex;color: #b3b3b3;font-size:20rpx;line-height: 28rpx;padding:20rpx 0;}
.week_label{flex:1;text-align: center;}
.calendar_bottom{ padding:0 40rpx;background: #fff;border-top-left-radius:40rpx;border-top-right-radius:40rpx;}
.day_label{width:14.28%;height: 60rpx;text-align: center;float:left;padding:20rpx 0;font-size: 24rpx;color:#344750;}

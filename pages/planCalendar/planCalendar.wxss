.cover_view_inner{top:50%;left:50%;transform: translateX(-50%) translateY(-50%);width: 80%;}
.cover_view_con{margin-bottom:40rpx;padding:50rpx 60rpx;border-radius: 20rpx;line-height:40rpx;}
.chance{font-size: 40rpx;color:#FB7661;padding:0 10rpx;}
.cover_view_tit,.cover_btn{margin-bottom:40rpx;}
.margin-b40{margin-bottom: 40rpx;}
.btn{height:80rpx;line-height: 80rpx;border-radius: 40rpx;width:43%;text-align: center;}
.btn02{background:linear-gradient(90deg,rgba(254,68,10,1),rgba(251,116,95,1));
box-shadow:0rpx 8rpx 14rpx 0rpx rgba(252,119,97,0.27);

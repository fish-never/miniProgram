.issign{background: #FB7661;color:#fff;}
.cansign_view{color:#FB7661;font-size: 16rpx;bottom:-40rpx;left:50%;transform: translateX(-50%);width:100%;}
.istoday_view{background:#FB7661;width:10rpx;height:10rpx;border-radius: 10rpx;bottom:-13rpx;left:50%;transform: translateX(-50%); }
